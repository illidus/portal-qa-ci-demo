          "name": "Get Metadata - Single Layer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bbox\": {\n    \"west\": -95.0,\n    \"south\": 35.0,\n    \"east\": -85.0,\n    \"north\": 45.0\n  },\n  \"layers\": [\"soil_ph\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/metadata",
              "host": ["{{baseUrl}}"],
              "path": ["metadata"]
            }
          },
          "response": []
        },
        {
          "name": "Get Metadata - Multiple Layers",
